<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.workwave.mapper.LunchMateBoardMapper">

    <!-- 게시물 목록 조회 -->
    <select id="findAll" resultType="com.workwave.entity.LunchMateBoard">
        SELECT * FROM LunchMateBoard
    </select>

    <!-- 게시물 상세 조회 -->
    <select id="findOne" parameterType="int" resultType="com.workwave.entity.LunchMateBoard">
        SELECT * FROM LunchMateBoard WHERE lunchPostNumber = #{lunchPostNumber}
    </select>

    <!-- 게시물 등록 -->
    <insert id="save" parameterType="com.workwave.entity.LunchMateBoard">
        INSERT INTO LunchMateBoard (title, content, writer, regDate)
        VALUES (#{title}, #{content}, #{writer}, #{regDate})
    </insert>

    <!-- 게시물 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM LunchMateBoard WHERE lunchPostNumber = #{lunchPostNumber}
    </delete>

    <!-- 조회수 상승 (필요 시 추가) -->
    <!--
    <update id="upViewCount" parameterType="int">
        UPDATE LunchMateBoard SET viewCount = viewCount + 1 WHERE lunchPostNumber = #{lunchPostNumber}
    </update>
    -->

</mapper>
